<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/background_product"
        android:layout_width="350dp"
        android:layout_height="310dp"
        android:background="#D50606"
        app:layout_constraintBottom_toTopOf="@+id/main_productname"
        app:layout_constraintEnd_toEndOf="@+id/main_product"
        app:layout_constraintStart_toStartOf="@+id/main_product"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/main_product"
        android:layout_width="350dp"
        android:layout_height="300dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/main_productname"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="내셔널지오그래픽 N214UDW901 듀공 후드 숏기장 덕 다운 점퍼 2종 택 1"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_product"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/main_homelogo"
        android:layout_width="110dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/main_productname"
        app:layout_constraintTop_toBottomOf="@+id/main_productname"
        app:srcCompat="@drawable/logo_lotte" />

    <TextView
        android:id="@+id/main_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="163,250 원"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_productname"
        app:layout_constraintTop_toBottomOf="@+id/main_productname" />

</androidx.constraintlayout.widget.ConstraintLayout>